@model List<EscolaDeVoce.Services.ViewModel.EspecialistViewModel>

<section id="embaixadoras-section" class="container">
    <div class="embaixadora-content slick-slider-container">
        <div class="embaixadoras-control slide-control">
            <img class="prev-arrow" src="~/images/site/previous-active.png" />
            <img class="next-arrow" src="~/images/site/next-active.png" />
        </div>
        
        <h2 class="sub-title">Nossas especialistas</h2>

        <div class="embaixadoras is-slick-slider" id="embaixadoras">

            @foreach(EscolaDeVoce.Services.ViewModel.EspecialistViewModel e in Model){
                <div class="embaixadora">
                    <div class="embaixadora-image">
                        <img src="http://localhost:5001/images/specialists/@e.image" />
                    </div>
                    <div class="embaixadora-info">
                        <div class="embaixadora-desc">
                            <h3 class="title">@e.name</h3>
                            <p class="job">@e.charge</p>
                        </div> <!-- /embaixadora-title -->
                        <div class="embaixadora-social">
                            <img src="~/images/site/facebook.png" /> <img src="~/images/site/instagram.png" /> <img src="~/images/site/youtube.png" />
                        </div><!-- /embaixadora-stars -->
                    </div><!-- /embaixadora-info -->
                </div><!-- /embaixadora -->
            }

        </div><!-- /embaixadoras -->

        <br/>
        <br/>
        
        <p class="text-right">
            @if(User.Identity.IsAuthenticated){
                <a class="escola-btn" href="/embaixadoras">CONHEÇA NOSSAS EMBAIXADORAS</a>
            }else{
                <a class="escola-btn" onclick="escoladevoce.auth.openSignupForm()">CONHEÇA NOSSAS EMBAIXADORAS</a>
            }
        </p>
    </div><!-- /embaixadora-content -->
</section><!-- /embaixadoras -->