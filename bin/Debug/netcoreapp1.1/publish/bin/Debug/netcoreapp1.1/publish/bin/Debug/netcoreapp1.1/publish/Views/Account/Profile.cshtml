@section scripts {
    <script>
        $(document).ready(function(){
            $('#courses').slick({
                infinite: false,
                speed: 300,
                slidesToShow: 3,
                prevArrow: $("#prev-arrow"),
                nextArrow: $("#next-arrow"),
                adaptiveHeight: true,
                responsive: [
                    {
                        breakpoint: 768,
                        settings: {
                            slidesToShow: 1,
                            slidesToScroll: 1
                        }
                    },
                    {
                        breakpoint: 480,
                        settings: {
                            slidesToShow: 1,
                            slidesToScroll: 1
                        }
                    }
                    ],
                arrows: true
            });

            $('#embaixadoras').slick({
                infinite: false,
                speed: 300,
                slidesToShow: 3,
                prevArrow: $("#emb-prev-arrow"),
                nextArrow: $("#emb-next-arrow"),
                adaptiveHeight: true,
                responsive: [
                    {
                        breakpoint: 768,
                        settings: {
                            slidesToShow: 1,
                            slidesToScroll: 1
                        }
                    },
                    {
                        breakpoint: 480,
                        settings: {
                            slidesToShow: 1,
                            slidesToScroll: 1
                        }
                    }
                    ],
                arrows: true
            });

            $( "#slider" ).slider({
                value:50,
                min: 0,
                max: 100,
                step: 10,
                slide: function( event, ui ) {
                    //$( "#amount" ).val( "$" + ui.value );
                }
            });
        });
    </script> 
}

