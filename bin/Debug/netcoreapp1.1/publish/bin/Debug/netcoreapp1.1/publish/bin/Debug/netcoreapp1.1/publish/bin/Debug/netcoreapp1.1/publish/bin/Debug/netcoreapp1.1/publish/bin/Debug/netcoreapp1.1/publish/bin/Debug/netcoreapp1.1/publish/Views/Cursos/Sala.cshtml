@model EscolaDeVoce.Services.ViewModel.CourseViewModel

@{
    ViewData["Title"] = "Cursos";
    var video = Model.videos[0];
}

@await Component.InvokeAsync("Header")

<section id="menu">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("_NavLogged")
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="subsection sub-title">@video.name</h2>
                <div class="status">
                    <div>21% concluido</div>
                    <div class="video-status">
                        <div class="video-status-indicator">
                            <div class="video-status-color-filler"></div>
                        </div>
                    </div>
                    <div>
                        <span class="icon icons-trofeu"></span>
                    </div>
                </div>
                
                <div id="player"></div>

                <script type="text/javascript" samba-player-api="player" src="http://player.sambatech.com.br/v3/samba.player.api.js"></script>
                <script type="text/javascript">
                    // <![CDATA[
                    var player = new SambaPlayer("player", {
                        "width": "100%",
                        "height": "600",
                        "ph": "3b8e50510d562d8d8b101c66f59bf625",
                        "m": "@video.sambatech_id",
                        "events": {
                            "onListen": "updateLogin"
                        },
                        "playerParams": {
                            "startOutput": "360p",
                            "resume": false
                        }
                    });
                    // ]]>
                </script>
            </div>
        </div>
    </div>
</section>

<section class="prazer-de-casa">
    <div class="container">
        <h2 class="subsection sub-title prazer-de-casa-title">Prazer de casa desse curso</h2>
        <div class="row">

            <div class="closed-div">
                <div class="col-md-7 col-md-offset-1">
                    <h2>
                        <span class="text-colored">Dicionário da Natalia</span><br />
                        Esse é o seu cantinho
                    </h2>
                    <p>
                        Esse é o espaço para você fazer as tarefas sugeridas pela Ana Paula Padrão e pelas professoras nas aulas, Use também para registrar seus pensamentos, emoções, e reflexões a partir do seu aprendizado na Escola de Você.
                    </p>
                </div>
                <div class="col-md-3">
                    <div>
                        <img src="~/images/sala-dicionario.png" alt=""/>
                    </div>
                </div>

                <div class="col-md-10 col-md-offset-1">
                <div>

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">AULAS</a></li>
                        <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">SONHOS E ALEGRIAS</a></li>
                        <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">DESAFIOS E DESABAFOS</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="home"></div>
                        <div role="tabpanel" class="tab-pane" id="profile"></div>
                        <div role="tabpanel" class="tab-pane" id="messages"></div>
                    </div>

                </div>
            </div>

            <div class="col-md-10 col-md-offset-1">
                <h2 class="subsection sub-title">Saiba Mais.</h2>
                <p>
                    Esse é o espaço para você fazer as tarefas sugeridas pela Ana Paula Padrão e pelas professoras nas aulas, Use também para registrar seus pensamentos, emoções, e reflexões a partir do seu aprendizado na Escola de Você.
                </p>

                <div class="course-help-docs">
                    <div class="course-help-doc">
                        <div class="doc-title">Ebook:2 minutos para mim</div>
                        <div class="doc-download-button">
                            <a href=""><span class="icon icons-download-button"></span></a>
                        </div>
                    </div>

                    <div class="course-help-doc">
                        <div class="doc-title">Ebook:2 minutos para mim</div>
                        <div class="doc-download-button">
                            <a href=""><span class="icon icons-download-button"></span></a>
                        </div>
                    </div>

                    <div class="course-help-doc">
                        <div class="doc-title">Ebook:2 minutos para mim</div>
                        <div class="doc-download-button">
                            <a href=""><span class="icon icons-download-button"></span></a>
                        </div>
                    </div>
                </div>
                
            </div>
            </div>
        </div>

    </div>
</section>

